	<!--ASSET POOL ACTIONS-->
	<action id="-1" name="revive" type="ReviveAction" class="PoolAction" view="assetPool">
		<attribute name="staticCost"><![CDATA[
			morphid = this.entityToApply.morphidPC *  this.entityToApply.rez;
			xylan = this.entityToApply.xylanPC *  this.entityToApply.rez;
			brontite = this.entityToApply.brontitePC *  this.entityToApply.rez;
		]]></attribute>
		<attribute name="functionality"><![CDATA[
			this.owner.faction.preservedEntities++;		
			this.entityToApply.multiplyAttribute("lif", 0.05);
			this.entityToApply.multiplyAttribute("act", 0.05);
			this.entityToApply.multiplyAttribute("atk", 0.05);
			this.entityToApply.multiplyAttribute("def", 0.05);
			if (this.entityToApply is Structure)
				this.entityToApply.addToAttribute("cap", -1);
			else if (this.entityToApply is Squad)
				this.entityToApply.addToAttribute("unt", -1);
			this.owner.faction.removeFromVault(this.entityToApply);
			this.owner.faction.addToInventory(this.entityToApply);
		]]></attribute>
	</action>
	<action id="-2" name="recycle" type="RecycleAction" class="PoolAction" view="assetPool">
		<attribute name="noCost">true</attribute>
		<attribute name="functionality"><![CDATA[
			this.owner.faction.xylan += this.entityToApply.xylanPC * this.entityToApply.rep;
			this.owner.faction.removeFromVault(this.entityToApply);
			this.owner.faction.removeEntity(this.entityToApply);
			this.owner.destroy();
		]]></attribute>
	</action>
	<action id="-3" name="buy" type="BuyAction" class="PoolAction" view="assetPool">
		<attribute name="staticCost"><![CDATA[morphid = this.owner.sel;]]></attribute>
		<attribute name="functionality"><![CDATA[
			this.entityToApply.faction.removeFromExportion(this.entityToApply);
			this.entityToApply.faction.removeEntity(this.entityToApply);
			this.owner.faction.addEntity(this.entityToApply);
			this.owner.faction.addToInventory(this.entityToApply);
			
			var cost:Object = this.action.getCostExternal({});
			this.owner.faction.morphid -= cost.morphid;
			this.owner.faction.xylan -= cost.xylan;
			this.owner.faction.brontite -= cost.brontite;
			this.entityToApply.faction.morphid += cost.morphid;
			this.entityToApply.faction.xylan += cost.xylan;
			this.entityToApply.faction.brontite += cost.brontite;
						
			this.entityToApply.faction.removeFromImportion(this.entityToApply);
		]]></attribute>
	</action>
