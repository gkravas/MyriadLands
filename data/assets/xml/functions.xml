	<action id="33" name="exploreLand" type="OperationAction" class="ExploreAction" view="worldMap">
		<attribute name="morphidCost">33</attribute>
		<attribute name="highLightValidation"><![CDATA[
			import myriadLands.entities.Land;
			var land:Land = this.owner.parentEntity as Land;
			if (land.structure != null) {
				returnValue = (!land.explored && land.structure.data.name == "flagstone");
			} else
				returnValue = false;
		]]></attribute>
		<attribute name="validation"><![CDATA[
			import myriadLands.entities.Land;
			var land:Land = this.owner.parentEntity as Land;
			if (land.structure != null) {
				returnValue = (!land.explored && land.structure.data.name == "flagstone");
			} else
				returnValue = false;
		]]></attribute>
		<attribute name="functionality"><![CDATA[
			this.owner.parentEntity.explore(100, this.ruinName);
			this.owner.parentEntity.structure = null;
			]]></attribute>
		<attribute name="netFunctionality"><![CDATA[
			this.owner.parentEntity.explore(100, this.ruinName);
			this.owner.parentEntity.structure = null;
		]]></attribute>
	</action>
	<action id="34" name="demolition" type="OperationAction" view="worldMap">
		<attribute name="sound">demolition</attribute>
		<attribute name="morphidCost">400</attribute>
		<attribute name="range">1-1</attribute>
		<attribute name="requiersInput">true</attribute>
		<attribute name="tileHighlightcolor"><![CDATA[
			import myriadLands.faction.Faction;
			import myriadLands.entities.Land;
			import myriadLands.combat.CombatHighlight;
			var land:Land = this.entity as Land;
			if (land.faction != null && land.structure != null) {
				if (land.faction.isFactionAlliance(this.owner.faction, [Faction.FOE, Faction.NEUTRAL]))
					returnValue = CombatHighlight.AVAILABLE;
			} 
		]]></attribute>
		<attribute name="validation"><![CDATA[
			import myriadLands.faction.Faction;
			import myriadLands.entities.Land;
			returnValue = false;
			if (this.inputEntity is Land) {
				var land:Land = this.inputEntity as Land;
				if (land.faction != null && land.structure != null) {
					if (land.faction.isFactionAlliance(this.owner.faction, [Faction.FOE, Faction.NEUTRAL])) {
						if (land == this.toValidateEntity)
							returnValue = true;
						else
							this.action.setToValidateEntity(land);
					}
				}
			}
		]]></attribute>
		<attribute name="functionality"><![CDATA[
			this.action.playSound();
			this.toValidateEntity.destroyStructure();
		]]></attribute>
		<attribute name="netFunctionality"><![CDATA[
			this.action.playSound();
			this.toValidateEntity.destroyStructure();
		]]></attribute>
	</action>
