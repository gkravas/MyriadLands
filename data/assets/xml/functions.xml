	<action id="56" name="homikinAttackSynergy" type="AuraAction" class="DynamicCombatAuraAction" view="combat">
		<attribute name="highLightValidation"><![CDATA[
			import myriadLands.faction.Faction;
			import gamestone.utils.ArrayUtil;
			import myriadLands.entities.Entity;
			var entityOn:Entity = this.entity.entityOn;
			returnValue = (ArrayUtil.inArray(entityOn.data.type, "homikin") && this.owner.faction == entityOn.faction);
		]]></attribute>	
		<attribute name="applyToAttributes">atk:5:%</attribute>
	</action>
	<action id="57" name="auraOfVoid" type="AuraAction" class="DynamicCombatAuraAction" view="combat">
		<attribute name="radius">5</attribute>
		<attribute name="highLightValidation"><![CDATA[
			import myriadLands.faction.Faction;
			import myriadLands.entities.CombatGround;
			import myriadLands.entities.Entity;
			var entityOn:Entity = this.entity.entityOn;
			if (this.owner.faction.getAllianceWithFaction(entityOn.faction) == Faction.FOE) {
				var distance:int = (this.owner.parentEntity as CombatGround).calculateTileDistance(this.entity as CombatGround);
				returnValue = (distance <= this.action.radius);
			} else
				returnValue = false;
		]]></attribute>	
		<attribute name="applyToAttributes">def:-10:%,lif:-10:%</attribute>
	</action>
	<action id="58" name="auraOfActionRegeneration" type="AuraAction" class="DynamicCombatAuraAction" view="combat">
		<attribute name="radius">5</attribute>
		<attribute name="highLightValidation"><![CDATA[
			import myriadLands.faction.Faction;
			import myriadLands.entities.CombatGround;
			import myriadLands.entities.Entity;
			var entityOn:Entity = this.entity.entityOn;
			if (entityOn != this.owner && this.owner.faction.isFactionAlliance(entityOn.faction, [Faction.FRIEND, Faction.PLAYER])) {
				var distance:int = (this.owner.parentEntity as CombatGround).calculateTileDistance(this.entity as CombatGround);
				returnValue = (distance <= this.action.radius);
			} else
				returnValue = false;
		]]></attribute>	
		<attribute name="applyToAttributes">actrg:10:%</attribute>
	</action>
